/* pages/shoplist/shoplist.wxss */
.shop-item{
  /* 使图片和文本并列排放 */
  display: flex;
  padding: 15rpx;
  border: 1rpx solid #efefef;
  margin: 15rpx;
  box-shadow: 1rpx 1rpx 15rpx #ddd;
}

.thumb image{
  width: 250rpx;
  height: 250rpx;
  /* 消除间隙 */
  display: block;
  margin-right: 15rpx;
}

.info{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 24rpx;
}
.shop-title{
  font-weight: bold;
}