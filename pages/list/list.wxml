<!-- view案例 -->
<view class="container1">
  <view>A</view>
  <view>B</view>
  <view>C</view>
</view>

<!-- scroll-view案例 -->
<!-- scroll-y：允许纵向滚动，scroll-x：允许横向滚动 -->
<scroll-view class="container2" scroll-y>
  <view>D</view>
  <view>E</view>
  <view>F</view>
</scroll-view>

<!-- 轮播图组件案例 -->
<!-- indicator-dots属性：显示面板指示点 -->
<swiper class="swiper-container" indicator-dots autoplay>
  <swiper-item>
    <view class="item">G</view>
  </swiper-item>
  <swiper-item>
    <view class="item">H</view>
  </swiper-item>
  <swiper-item>
    <view class="item">I</view>
  </swiper-item>
</swiper>

<!-- text组件案例 -->
<view>
  手机号支持长按选中效果：
  <text selectable>15060533661</text>
</view>

<!-- rich-text组件案例 -->
<!-- 应用场景：商品详情页的结构渲染 -->
<rich-text nodes="<h1 style='color:red'>标题</h1>"/>

<!-- button组件案例 -->
<button>默认按钮</button>
<!-- 通过type指定按钮类型 -->
<button type="primary">主色调按钮</button>
<button type="warn">警告按钮</button>
<!-- size="mini" 小尺寸按钮 -->
<button type="primary" size="mini">小尺寸主按钮</button>
<!-- plain 镂空按钮 -->
<button type="warn" size="mini" plain>小尺寸镂空警告按钮</button>

<!-- image组件案例 -->
<image src="/images/blue.jpg" mode=""/>